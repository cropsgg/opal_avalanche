# OPAL Frontend Configuration
# Copy this file to .env.local and update with your values

# Backend API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000

# Network Configuration
# Options: opal_production, avalanche_fuji, local
NEXT_PUBLIC_NETWORK=opal_production

# OPAL Private Subnet (Production)
NEXT_PUBLIC_NOTARY_CONTRACT_ADDRESS=0x...
NEXT_PUBLIC_COMMIT_STORE_ADDRESS=0x...
NEXT_PUBLIC_PROJECT_REGISTRY_ADDRESS=0x...

# Legacy Fuji Testnet (Deprecated)
NEXT_PUBLIC_FUJI_NOTARY_ADDRESS=0x...
NEXT_PUBLIC_FUJI_COMMIT_ADDRESS=0x...
NEXT_PUBLIC_FUJI_REGISTRY_ADDRESS=0x...

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...

# Feature Flags
NEXT_PUBLIC_ENABLE_PRIVATE_SUBNET=true
NEXT_PUBLIC_ENABLE_LEGACY_NETWORK=false
NEXT_PUBLIC_REQUIRE_VPN_WARNING=true

# Development
NODE_ENV=development
NEXT_PUBLIC_DEBUG_MODE=false
